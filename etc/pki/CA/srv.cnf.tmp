[ req ]
default_bits                    = 1024
default_keyfile                 = privkey.pem
distinguished_name              = server

[ server ]
countryName                     = Country
countryName_value               = ICC

organizationName                = Organization
organizationName_value          = OU

organizationalUnitName          = Certificate file
organizationalUnitName_value    = Host

localityName                    = Department Name (i.e. Cape Town)
localityName_min                = 2

commonName                      = Server Fully Qualified Domain (hostname) 
commonName_min                  = 10
commonName_max                  = 64

emailAddress                    = Server Manager e-mail
emailAddress_min                = 10
emailAddress_max                = 60
